#Ottowa attacks the rest of Canada -formerly just Aryan Guard but I have now changed it to all of Alberta.
country_event = {
	id = Canada_old.8
	title = Canada_old.8.t
	desc = Canada_old.8.d
	#picture =
	fire_only_once = yes
	is_triggered_only = yes
	#mean_time_to_happen = { days = 10 }
	option = {
		declare_war_on = {
			target = WPC
 	    		type = annex_everything
		}
		declare_war_on = {
			target = BRC
 	    		type = annex_everything
		}
		if = {
			limit = {
				is_in_faction_with = PTR
			}
			annex_country = {
			    target = PTR
			    transfer_troops = yes
			}
			every_state = {
				limit = {
					is_core_of = PTR
				}
				add_core_of = ROOT
			}
		}
		if = {
			limit = {
				country_exists = QUE
				NOT = {
					has_war_with = QUE
				}
			}
			if = {
				limit = {
					is_in_faction_with = QUE
				}
				remove_from_faction = QUE
			}
			declare_war_on = {
				target = QUE
 	    			type = annex_everything
			}
		}
		if = {
			limit = {
				tag = ONT
			}
			set_cosmetic_tag = CAN_british
		}
	}
}
