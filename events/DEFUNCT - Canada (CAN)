add_namespace = Canada_old

#Canadian Collapse
country_event = {
	id = Canada_old.1
	title = Canada_old.1.t
	desc = Canada_old.1.d
	#picture =
	is_triggered_only = yes
	fire_only_once = yes
	immediate = {
		hidden_effect = {
		}
	}
	#continue as Trud Gov
	option = {
		name = Canada_old.1.a
		add_threat = 15
	}
	#Ontario
	option = {
		name = Canada_old.1.b
		add_threat = 15
		ONT = { change_tag_from = ROOT }
	}
	#Vancouver
	option = {
		name = Canada_old.1.c
		add_threat = 15
		VAN = { change_tag_from = ROOT }
	}
	#Alberta
	option = {
		name = Canada_old.1.e
		add_threat = 15
		WPC = { change_tag_from = ROOT }
	}
}
#35 day deadline to recover exiled divisions ends
country_event = {
	id = Canada_old.2
	title = Canada_old.2.t
	desc = Canada_old.2.d
	#picture =
	fire_only_once = yes
	is_triggered_only = yes
	immediate = {
		hidden_effect = {
			declare_war_on = {
			    target = ONT
 			    type = annex_everything
			}
			declare_war_on = {
			    target = PTR
 			    type = annex_everything
			}
			BRC = {
				declare_war_on = {
			  		target = VAN
 			    	type = annex_everything
				}
			}
		}
	}
	option = {
		name = Canada_old.2.a
		hidden_effect = {
			news_event = {
				id = Canada_old.3
			}
		}
	}
}
#Civil War news event
news_event = {
	id = Canada_old.3
	title = Canada_old.3.t
	desc = Canada_old.3.d
	picture = event_news_war_with_canada
	major = yes
	is_triggered_only = yes
	option = {
		name = Canada_old.3.a
		if = {
			limit = {NOT = {is_ai = yes}}
			set_country_flag = {
    				flag = super_event
    				value = 4
			}
			if = { limit = { NOT= { any_other_country = {has_country_flag = super_event}}}
				sound_effect = "canada_cw"
				play_song = "one_minute_of_silence"
			}
		}
	}
}
