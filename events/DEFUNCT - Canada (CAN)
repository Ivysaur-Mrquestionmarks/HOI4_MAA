#Trudeau abolishes the monarchy
country_event = {
	id = Canada_old.6
	title = Canada_old.6.t
	desc = Canada_old.6.d
	#picture =
	fire_only_once = yes
	is_triggered_only = yes
	option = {
		add_stability = -0.05
		if = {
			limit = {
				is_in_faction = yes
			}
			leave_faction = yes
		}
		create_country_leader = {
			name = "Justin Trudeau"
			picture = "Trudeau.dds"
			expire = "2060.1.1"
			ideology = Authoritarian_Liberalism
			traits = {
				###		
			}
		}
		remove_ideas = Queen_Elizabeth_II
		set_party_name = { 
		    ideology = authoritarian_left
		    long_name = CAN_new_liberals_party
		    name = CAN_new_liberals_party_long
		}
		set_politics = {
			ruling_party = authoritarian_left
		}
		add_popularity = {
		    ideology = authoritarian_left
		    popularity = 0.10
		}
		country_event = {
			id = Canada_old.1
			days = 14
		}
		hidden_effect = {
			news_event = { id = Canada_old.7 }
		}
	}
}
